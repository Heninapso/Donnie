<div class="hrservices">
<!-- <div class="container"> -->
  <h3 class= "text-center">Deux services pour ENFIN savoir ce que pense un RH de votre CV et/ou de votre LinkedIn</h3>
  <div class="row">
    <% @hrservices.each do |hrservice| %>
      <div class="col-xs-12 col-md-6">
        <% if hrservice.entry_service? %>
          <div class="card">
            <div class="card-service">
            <div class="card-title"><%= hrservice.title %></div>
            <%= hrservice.description %>
            <div class="card-price">Prix : <%= hrservice.price %> €</div>
            <div class="card-button"><%= link_to 'Prendre RDV', new_hrservice_meeting_path(hrservice), class: "btn-small" %></div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <h3 class= "text-center">Pour aller plus loin</h3>
  <div class="row">
    <% @hrservices.each do |hrservice| %>
      <div class="col-xs-12 col-md-6">
        <% if !hrservice.entry_service? && !hrservice.ondemand_service? %>
          <div class="card">
            <div class="card-service">
            <div class="card-title"><%= hrservice.title %></div>
            <%= hrservice.description %>
            <div class="card-price">Prix : <%= hrservice.price %> €</div>
            <div class="card-button"><%= link_to 'Prendre RDV', new_hrservice_meeting_path(hrservice), class: "btn-small" %></div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <h3 class= "text-center">Et pour ceux qui veulent un service sur mesure</h3>
  <div class="row">
    <% @hrservices.each do |hrservice| %>
      <div class="col-xs-12 col-md-10 col-md-offset-1">
        <% if hrservice.ondemand_service? %>
          <div class="card">
            <div class="card-section">
              <div class="card-title"><%= hrservice.title %></div>
              <%= hrservice.description %>
              <div class="card-price">Prix : <%= hrservice.price %> € / heure</div>
              <div class="card-button"><%= link_to 'Prendre RDV', new_hrservice_meeting_path(hrservice), class: "btn-small" %></div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
<!-- </div> -->
</div>


