<%= simple_form_for [@hrservice, @meeting] do |f| %>
  <%= f.error_notification %>
  <div class="meeting_option">
    <%= f.input :meeting_date, as: :datetime, label: "Option 1" %>
    <%= f.input :meeting_location, label: "Secteur souhaité pour le rendez-vous", placeholder: "Adresse, Metro, etc.." %>
  </div>

  <div class="submit-btn">
    <%= f.submit "Envoyez-nous vos disponibilités !", class: "btn" %>
  </div>
<% end %>
