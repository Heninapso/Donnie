<div class="form-container">
  <%= simple_form_for [@hrservice, @meeting] do |f| %>
    <%= f.error_notification %>
    <div class="row">
      <div class="col-xs-6 col-md-6">
        <div id="datetimepick text-center">
          <%= f.input :meeting_date, as: :string, label: "Option 1", input_html: {class: "datetimepick form-control"} %>
          <!-- <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span> -->
        </div>
      </div>
      <div class="col-xs-6 col-md-6">
        <div id="location text-center">
          <%= f.input :meeting_location, label: "Secteur souhaité pour le rendez-vous", placeholder: "Adresse, Metro, etc..", input_html: {class: "form-control"} %>
        </div>
      </div>
    </div>

    <div class="submit-btn">
      <%= f.submit "Envoyez-nous vos disponibilités !", class: "btn" %>
    </div>
  <% end %>
</div>
