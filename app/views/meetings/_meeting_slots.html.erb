<%= simple_form_for [@hrservice, @meeting] do |f| %>
  <%= f.error_notification %>
  <div class="meeting_option">
    <div id="datetimepick">
      <%= f.input :meeting_date, as: :string, label: "Option 1", input_html: {class: "datetimepick"} %>
    </div>
    <%= f.input :meeting_location, label: "Secteur souhaité pour le rendez-vous", placeholder: "Adresse, Metro, etc..", input_html: {class: "form-control"} %>
  </div>

  <div class="submit-btn">
    <%= f.submit "Envoyez-nous vos disponibilités !", class: "btn" %>
  </div>
<% end %>
