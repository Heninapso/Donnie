
<% content_for(:navbar_class, "navbar-transparent") %>

<div class="signin">

  <div class="title">
    <h2>Connectez-vous à votre espace personnel chez<span class="slogan"> Donnie!</span></h2>
  </div>

  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4">
      <div class="contain-form">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :first_name, placeholder: "Donnie", label: "Votre prénom"%>
            <%= f.input :last_name, placeholder: "TheSheep", label: "Votre nom"%>
            <%= f.input :email, required: true, autofocus: true, placeholder: "donnie@greenmeadows.ie", label: "Votre email"%>
            <%= f.input :password, required: true, placeholder: "******"%>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="hidden-xs hidden-sm">
            <div class="form-actions">
              <span id="submit-button">
              <%= f.button :submit, "Retrouvez votre coin d'herbe chez Donnie! ", class: "btn" %>
              </span>
            </div>
          </div>
          <div class="visible-xs visible-sm">
            <div class="form-actions-mobile">
              <span id="submit-button">
              <%= f.button :submit, "Retrouvez votre coin d'herbe chez Donnie! ", class: "btn" %>
              </span>
            </div>
          </div>
        <% end %>

        <div class="registration">
          <p class="sml">Pas encore votre coin d'herbe chez Donnie ? Inscrivez-vous !</p>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
