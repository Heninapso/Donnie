
<% content_for(:navbar_class, "navbar-transparent") %>

<div class="signup">

  <div class="title">
    <h2>Créer son accès individuel à<span class="slogan"> Donnie!</span></h2>
  </div>


  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4">
      <div class="container-form">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :first_name, placeholder: "Donnie", label: "Votre prénom"%>
            <%= f.input :last_name, placeholder: "TheSheep", label: "Votre nom"%>
            <%= f.input :email, required: true, autofocus: true, placeholder: "donnie@greenmeadows.ie", label: "Votre email"%>
            <%= f.input :password, required: true, placeholder: "******", label: "Choissisez un mot de passe - 6 caractères minimum", error: "On a vraiment besoin d'un mot de passe..."%>
            <%= f.input :password_confirmation, required: true, placeholder: "******", label: "Confirmez votre mot de passe" %>
          </div>
          <div class="hidden-xs hidden-sm">
            <div class="form-actions">
              <span id="submit-button" data-toggle="tooltip" data-placement="right" title="En cliquant ici, vous recevrez automatiquement toutes les news de Donnie!">
              <%= f.button :submit, "Créer votre coin d'herbe verte !", class: "btn" %>
              </span>
            </div>
          </div>
          <div class="visible-xs visible-sm">
            <div class="form-actions-mobile">
              <span id="submit-button" data-toggle="tooltip" data-placement="right" title="En cliquant ici, vous recevrez automatiquement toutes les news de Donnie!">
              <%= f.button :submit, "Créer votre coin d'herbe verte !", class: "btn" %>
              </span>
            </div>
          </div>
        <% end %>

        <div class="sign-in">
          <p class="sml">Vous avez déjà votre coin d'herbe chez Donnie ? Connectez-vous !</p>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
